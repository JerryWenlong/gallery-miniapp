/* components/password/index.wxss */
.page-layou{
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 99;
}
.content{
  width: 100%;
  padding: 240rpx 60rpx 0;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
}
.ipt-box{
  width: 352rpx;
  overflow: hidden;
  margin: 0 auto;
}
.ipt{
  width: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 24rpx;
  color: #333;
  font-size: 24rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  float: left;
}
.hide-ipt{
  width: 0;
  height: 0;
}
.tips{
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  margin: 100rpx 0 40rpx;
  font-size: 32rpx;
  color: #999;
  overflow: hidden;
}
.def-bth{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  color: #999;
  font-size: 28rpx;
  background-color: #E3E3E3;
  border-radius: 48rpx;
  overflow: hidden;
}
.apply{
  color: #fff;
  background-color: #EA111C;
}