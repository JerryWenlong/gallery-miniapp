/* 大图弹层  */
.popup-box{
  width: 100%;
  height: 100%;
  background-color: #000;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}
.popup-name{
  width: 100%;
  height: 170rpx;
  line-height: 68rpx;
  padding: 30rpx 0;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99; 
  background:linear-gradient(180deg,rgba(0,0,0,0.5),rgba(0,0,0,0));
}
.popup-name .left_b{
  padding: 0 32rpx;
  color: #ccc;
  font-size: 24rpx;
  float: left;
}
.popup-name .right_b{
  padding: 0 32rpx;
  height:68rpx;
  float: right;
}
.right_b image{
  padding: 20rpx;
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
}
.popup-swipe{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.popup-swipe .img-box{
  width: 100%;
  height: 100%;
  box-sizing:border-box;
  /* padding:200rpx 0; */
  overflow: scroll;
  display:flex;
  align-items:center;
  justify-content: center;
}
.popup-swipe .slide-image{
  width: 100%;
  height: 100%;
}
/* 小轮播  */
.popup-swipe-small{
  width: 100%;
  height: 416rpx;
  background: linear-gradient(180deg,rgba(0,0,0,0),rgba(0,0,0,1));
  opacity:0.9;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 98;  
}
.popup-swipe-small .title-box{
  padding: 52rpx 40rpx 40rpx;
  height: 134rpx;
  color: #fff;
  overflow: hidden;
}
.popup-swipe-small .title-box .title{
  display: block;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;  
}
.popup-swipe-small .title-box .content{
  height: 66rpx;
  line-height: 32rpx;  
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  
}
.popup-scroll-box{
  width: 100%;
  height: 60rpx;
  text-align: left;
  white-space:nowrap;
}
.popup-scroll-box .item-box{
  display: inline-block;
  width: 80rpx;
  height: 60rpx;
  padding: 0 2rpx;
}
.popup-scroll-box .scroll-image{
  width: 100%;
  height: 100%;
}
.popup-scroll-box .cur .scroll-image{
  border: 1px solid #fff;
  box-sizing: border-box;
}
.popup-tool{
  /* display: flex; */
  width: 100%;
  padding: 30rpx 24rpx;
  height: 130rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 99;
  overflow: hidden;
}
.popup-tool .flex{
  display: block;
  /* flex: 1;  */
  min-width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;  
  padding: 20rpx;
  text-align: center;
  position: relative;
  float: left;
}
.popup-tool .like{
  float: right;
}
.popup-tool .img{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-top: 1rpx;
  padding-right: 10rpx;
  overflow: hidden;
  vertical-align: middle;
}
.popup-tool .like .img{
  height: 28rpx;
  margin-top: 1rpx;
}
 .popup-tool .text{
  display: inline-block;
  vertical-align: middle;
} 
.share-bth{
  width: 100%;
  height: 100%;
  opacity: 0;
  padding: 0;
  margin: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}
/* 照片信息  */
.pic-info{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0, 0.9);
  overflow: hidden;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 199;
}
.pic-info .info-bth{
  width: 100%;
  height: 68rpx;
  padding: 30rpx 0;
  overflow: hidden;
}
.info-bth image{
  padding: 20rpx;
  display: block;
  width: 38rpx;
  height: 38rpx;
  margin-right: 108rpx;
  float: right;
}
.pic-list .item{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 24rpx;
  color: #fff;
  overflow: hidden;
}
.pic-list text{
  display: block;
  float: left;
}
.pic-list .left{
  width: 150rpx;
  padding-right: 40rpx;
  color: #ccc;
  text-align: right;
}