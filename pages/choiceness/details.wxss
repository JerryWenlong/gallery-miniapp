/* pages/choiceness/details.wxss */

.page {
  padding: 40rpx 60rpx 100rpx;
}

.top-box {
  width: 100%;
  height: 144rpx;
  line-height: 144rpx;
  padding: 0 40rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  box-shadow: 0px 14rpx 48rpx 0px rgba(239, 239, 239, 0.5);
  border-radius: 12rpx;
  border: 2rpx solid rgba(245, 245, 245, 1);
  box-sizing: border-box;
  overflow: hidden;
}

.top-box .fl {
  width: 68%;
  font-weight: 600;
}

.top-box .fr {
  font-size: 24rpx;
  color: #9b9b9b;
}

.title-box {
  width: 100%;
  line-height: 60rpx;
  padding: 50rpx 20rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  box-sizing: border-box;
  overflow: hidden;
}

.author-box {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #999;
  box-sizing: border-box;
  overflow: hidden;
}

.author-box .img {
  float: left;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  overflow: hidden;
}

.detail-img {
  width: 100%;
  padding: 0 20rpx;
  margin: 60rpx 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.describe {
  width: 100%;
  line-height: 44rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  overflow: hidden;
}
