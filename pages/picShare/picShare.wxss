/* pages/picShare/share.wxss */

.big-pic-contain {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #000;
}

.big-pic {
  width: 100%;
  margin-top: 250rpx;
}

