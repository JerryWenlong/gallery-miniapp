/* pages/login/login.wxss */
.login-box{
  background-color: #999;
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction: column;
  /*垂直居中*/
   align-items: center; 
  /*水平居中*/
  /* justify-content: center; */
}
.bg-image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}
.text-box{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 300rpx;
  left: 0;
  z-index: 19;
}
.tips{
  display: block;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #999;
}
.loader{
  display: inline-block;
	width: 16rpx;
	height: 16rpx;
	border-radius: 50%;
  position: relative;
  left: -32rpx;
	-webkit-animation: loader_red 1s linear infinite alternate;
	-moz-animation: loader_red 1s linear infinite alternate;
	animation: loader_red 1s linear infinite alternate;
}

@keyframes loader{
	0%{
		background-color: rgba(255,255,255,1);
		box-shadow: 32rpx 0 0 0 rgba(255,255,255,0.4),
					64rpx 0 0 0 rgba(255,255,255,0.2);
	}
	50%{
		background-color: rgba(255,255,255,0.4);
		box-shadow: 32rpx 0 0 0 rgba(255,255,255,1),
					64rpx 0 0 0 rgba(255,255,255,0.2);		
	}
	100%{
		background-color: rgba(255,255,255,0.4);
		box-shadow: 32rpx 0 0 0 rgba(255,255,255,0.2),
					64rpx 0 0 0 rgba(255,255,255,1);		
	}
}	

@keyframes loader_red{
	0%{
		background-color: rgba(234,17,28,1);
		box-shadow: 32rpx 0 0 0 rgba(234,17,28,0.4),
					64rpx 0 0 0 rgba(234,17,28,0.2);
	}
	50%{
		background-color: rgba(234,17,28,0.4);
		box-shadow: 32rpx 0 0 0 rgba(234,17,28,1),
					64rpx 0 0 0 rgba(234,17,28,0.2);		
	}
	100%{
		background-color: rgba(234,17,28,0.4);
		box-shadow: 32rpx 0 0 0 rgba(234,17,28,0.2),
					64rpx 0 0 0 rgba(234,17,28,1);		
	}
}	