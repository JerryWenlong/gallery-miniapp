.pop-up{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: #000;
  overflow: hidden;
}
.pop-up .close{
  position: fixed;
  right: 30rpx;
  top: 30rpx;
  padding: 30rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 999;
}
