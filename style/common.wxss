/* 改变盒模型 */

.border-box {
  box-sizing: border-box;
}

/* 垂直水平居中 */

.xyCenter {
  position: absolute;
  transform: translate(-50%, 50%);
  left: 50%;
  bottom: 50%;
}

/* 水平居中 */

.xCenter {
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
}

/* 垂直居中 */

.yCenter {
  position: absolute;
  transform: translateY(-50%);
  top: 50%;
}

/* 一行文字溢出三点省略 */

.oneLineOmit {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 两行文字溢出省略 */

.twoLineOmit {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 3行文字溢出省略 */

.threeLineOmit {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 清除浮动 */

.clearfix::after {
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

/* 无图片时 */

.no-pic {
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid #f3f3f3;
}

/* 无banner时 */

.no-banner {
  box-shadow: 0px 3px 24px 0px rgba(227, 227, 227, 0.5);
  border: 1px solid #f3f3f3;
  box-sizing: border-box;
  background-color: #fff;
}

/* 小图标 */

.icon {
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: contain;
}

/* 背景图 */

.v-pic {
  background-size: cover;
  background-position: 50% 50%;
  background-repeat: no-repeat;
}

.v-pic.bg-contain {
  background-size: contain;
}

